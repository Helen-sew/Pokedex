             <label for="defense">Defense</label> 
             <input type="text" name="defense" id="defense" />
        </div>

        <div class="form-group">
            <label for="spattack">Spattack</label> 
            <input type="text" name="spattack" id="spattack" />
        </div>

        <div class="form-group">
            <label for="spdefense">Spdefense</label> 
            <input type="text" name="spdefense" id="spdefense" />
        </div>

